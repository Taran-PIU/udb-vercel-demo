{
  "version": "0.2.0",
  "configurations": [
  
    
    {
      "name": "Frontend (npm start)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      // "port": 9229,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Backend (nodemon server.js)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "program": "${workspaceFolder}/backend/server.js",
      "restart": true,
      // "port": 9229,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
